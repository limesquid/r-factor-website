{
  "name": "r-factor-website-backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "homepage": "https://bitbucket.org/kamilmielnik/r-factor-website#readme",
  "repository": {
    "type": "git",
    "url": "git+https://kamilmielnik@bitbucket.org/kamilmielnik/r-factor-website.git"
  },
  "scripts": {
    "build": "better-npm-run build",
    "build:prod": "better-npm-run build:prod",
    "lint": "eslint src/",
    "start": "better-npm-run start",
    "start:prod": "better-npm-run start:prod"
  },
  "betterScripts": {
    "build": {
      "command": "rimraf dist && webpack",
      "env": {
        "API_HOST": "http://127.0.0.1",
        "API_PORT": "3000",
        "NODE_ENV": "production"
      }
    },
    "build:prod": {
      "command": "rimraf dist && webpack",
      "env": {
        "API_HOST": "https://r-factor.io",
        "API_PORT": "80",
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "webpack",
      "env": {
        "API_HOST": "http://127.0.0.1",
        "API_PORT": "8080",
        "NODE_ENV": "development"
      }
    },
    "start:prod": {
      "command": "node dist/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "better-npm-run": "0.1.0",
    "eslint": "^4.19.1",
    "rimraf": "^2.6.2",
    "start-server-webpack-plugin": "^2.2.5",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-recaptcha": "^4.0.2"
  }
}
